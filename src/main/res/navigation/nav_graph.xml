<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/subjectsFragment">

    <fragment
        android:id="@+id/subjectsFragment"
        android:name="com.example.liyakatnisani.ui.main.SubjectsFragment"
        android:label="Konular"
        tools:layout="@layout/fragment_subjects" >
        <action
            android:id="@+id/action_subjectsFragment_to_lectureNotesFragment"
            app:destination="@id/lectureNotesFragment" />
    </fragment>

    <fragment
        android:id="@+id/lectureNotesFragment"
        android:name="com.example.liyakatnisani.ui.main.LectureNotesFragment"
        android:label="Ders Notları"
        tools:layout="@layout/fragment_lecture_notes" >
        <argument
            android:name="subjectId"
            app:argType="long" />
        <action
            android:id="@+id/action_lectureNotesFragment_to_lectureNoteDetailFragment"
            app:destination="@id/lectureNoteDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/lectureNoteDetailFragment"
        android:name="com.example.liyakatnisani.ui.main.LectureNoteDetailFragment"
        android:label="Ders Notu Detayı"
        tools:layout="@layout/fragment_lecture_note_detail" >
        <argument
            android:name="lectureNoteId"
            app:argType="long" />
        <action
            android:id="@+id/action_lectureNoteDetailFragment_to_testFragment"
            app:destination="@id/testFragment" />
    </fragment>

    <fragment
        android:id="@+id/testFragment"
        android:name="com.example.liyakatnisani.ui.test.TestFragment"
        android:label="Pratik Test"
        tools:layout="@layout/fragment_test">
        <argument
            android:name="lectureNoteId"
            app:argType="long" />
        <action
            android:id="@+id/action_testFragment_to_testResultFragment"
            app:destination="@id/testResultFragment"
            app:popUpTo="@id/lectureNoteDetailFragment"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/testResultFragment"
        android:name="com.example.liyakatnisani.ui.test.TestResultFragment"
        android:label="Test Sonucu"
        tools:layout="@layout/fragment_test_result">
        <argument
            android:name="correctCount"
            app:argType="integer" />
        <argument
            android:name="wrongCount"
            app:argType="integer" />
        <argument
            android:name="totalQuestions"
            app:argType="integer" />
        <argument
            android:name="lectureNoteId"
            app:argType="long"/>
        <action
            android:id="@+id/action_testResultFragment_to_subjectsFragment"
            app:destination="@id/subjectsFragment"
            app:popUpTo="@id/subjectsFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_testResultFragment_to_testFragment"
            app:destination="@id/testFragment"
            app:popUpTo="@id/lectureNoteDetailFragment"
            app:popUpToInclusive="false"/>
        <action
            android:id="@+id/action_testResultFragment_to_lectureNoteDetailFragment"
            app:destination="@id/lectureNoteDetailFragment"
            app:popUpTo="@id/lectureNoteDetailFragment"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>
